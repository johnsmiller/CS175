<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.sjsu.techknowgeek.fingerninja.StatsFragment">

    <TextView
        android:id="@+id/stat_welcome"
        android:text="@string/stats_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/g1_welcome"
        android:text="Hungry Frog"
        android:layout_below="@id/stat_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"

        android:layout_centerHorizontal="true"
        android:textStyle="bold" />
    <TableLayout
        android:layout_below="@id/g1_welcome"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/g1_stats">
        <TableRow>
            <TextView
                android:id="@+id/hs_user_label"
                android:text="User Highscore:"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/hs_user_score"
                android:text="9999"
                android:textSize="14dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/hs_overall_label"
                android:text="Overall Highscore:"
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/hs_overall_score"
                android:text="9999"
                android:textSize="14dp"/>
        </TableRow>
        <TableRow></TableRow>
        <TableRow>
            <TextView
                android:id="@+id/hs_avg_overall_label"
                android:text="Overall: "
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/hs_avg_overall_score"
                android:text="9999"
                android:textSize="14dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/hs_avg_ulasthr_label"
                android:text="User Last Hr: "
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/hs_avg_ulasthr_score"
                android:text="9999"
                android:textSize="14dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/hs_avg_ulastwk_label"
                android:text="User Last Week: "
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/hs_avg_ulastwk_score"
                android:text="9999"
                android:textSize="14dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/hs_avg_ulastm_label"
                android:text="User Last Month: "
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/hs_avg_ulastm_score"
                android:text="9999"
                android:textSize="14dp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/g2_welcome"
        android:text="Finger Down, Swipe Around"
